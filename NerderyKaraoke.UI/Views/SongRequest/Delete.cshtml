@model NerderyKaraoke.UI.Models.SongRequest.DeleteViewModel
@{
	ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>

<div>
	<h4>Song Request</h4>
	<hr/>
	<dl class="dl-horizontal">
		<dt>
			@Html.DisplayNameFor(m => m.SingerName)
		</dt>

		<dd>
			@Html.DisplayFor(m => m.SingerName)
		</dd>

		<dt>
			@Html.DisplayNameFor(m => m.SongTitle)
		</dt>

		<dd>
			@Html.DisplayFor(m => m.SongTitle)
		</dd>

		<dt>
			@Html.DisplayNameFor(m => m.YouTubeUrl)
		</dt>
		<dd>
			@Html.DisplayFor(m => m.YouTubeUrl)
		</dd>
	</dl>
	@using (Html.BeginForm())
	{
