@model IEnumerable<NerderyKaroke.Models.Song>

@{
    ViewBag.Title = "Admin";
}

<h3>Shhhhhh. Its the super secret admin page.</h3>

@if (Model.Any())
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SingerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SongTitle)
            </th>
            <th></th>
        </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SingerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SongTitle)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

    </table>
    <br />
    <br />
    <h3>Caution, cannot be undone.</h3>
    <button class="btn btn-danger" type="button" id="submitSong" onclick="location.href='@Url.Action("DeleteAll")'">WIPE DATA</button>
}
else
{
    <h3>Nothing to see here.</h3>
}

